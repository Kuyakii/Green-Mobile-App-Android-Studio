<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Thème principal Genshin-inspired -->
    <style name="Theme.PaimonMoe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/genshin_primary</item>
        <item name="colorPrimaryVariant">@color/genshin_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/genshin_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/genshin_background</item>
        <item name="android:windowBackground">@color/genshin_background</item>

        <item name="android:textColorPrimary">@color/genshin_text_primary</item>

        <item name="android:statusBarColor">@color/genshin_magic</item>
        <item name="android:navigationBarColor">@color/genshin_magic</item>
        <item name="colorPrimaryDark">@color/genshin_toolbar_background</item>
    </style>

    <!-- Thème sans ActionBar -->
    <style name="Theme.PaimonMoe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style pour boutons -->
    <style name="GenshinButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/genshin_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Titres principaux -->
    <style name="TextView.Paimon.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Texte général -->
    <style name="TextView.Paimon" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Boutons stylés -->
    <style name="Button.Paimon" parent="android:Widget.Button">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Champs de saisie stylés -->
    <style name="EditText.Paimon" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/genshin_text_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Overlays -->
    <style name="Theme.PaimonMoe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PaimonMoe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>