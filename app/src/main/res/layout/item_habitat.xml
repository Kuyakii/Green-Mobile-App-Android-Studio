<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/habitat_card"
    android:layout_margin="12dp"
    android:padding="14dp"
    android:elevation="6dp">

    <!-- En-tête : Titre + étage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/habitat_item_header"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textHabitatNom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/genshin_primary_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/lexend_bold" />

        <TextView
            android:id="@+id/textEtage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/habitat_item_etage"
            android:padding="6dp"
            android:textColor="#26A69A"
            android:textSize="13sp"
            android:fontFamily="@font/lexend_bold"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>

    <!-- Bloc équipements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/habitat_item_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textEquipements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:fontFamily="@font/lexend_regular" />
    </LinearLayout>
</LinearLayout>
